# Environment Variables Template
# Copy this file to .env.local and fill in the values

# Node Environment
NODE_ENV=development

# Application
PORT=3000

# AWS Configuration (uses AWS CLI default credentials)
# DO NOT set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY here
# Use AWS CLI profiles instead
AWS_REGION=us-west-2
AWS_PROFILE=villaai

# DynamoDB
DYNAMODB_TABLE_PREFIX=geekcon-dev

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Secrets (use AWS Secrets Manager in production)
# DATABASE_URL=
# JWT_SECRET=
# STRIPE_API_KEY=
